@page
@model BigTic.Pages.RegisterModel
@{
}
<!doctype html>
<html>
<head>
    <title>Закрась клетку</title>
    <link rel="stylesheet" href="css/styles.css" />
</head>
<body>
    <div class="main">
        <form asp-action="Login" class="login-form" method="post">
            <div>
                <div>Логин</div>
                <input asp-for="Login" required />
            </div>
            <div>
                <div>Пароль</div>
                <input asp-for="Password" type="password" minlength="4" required />
            </div>
            <div class="login-buttons">
                <button>Зарегестрироваться</button>
                <a href="Login">Войти</a>
            </div>
        </form>
    </div>
</body>
</html>
